@model ProjectInputModel

<div class="modal fade" id="saveProjectModal" tabindex="-1" aria-labelledby="saveProjectLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="saveProjectLabel">Save Project</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="project-form" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Goal" class="control-label"></label>
                        <textarea asp-for="Goal" class="form-control"></textarea>
                        <span asp-validation-for="Goal" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PhotoUpload" class="control-label"></label>
                        <input asp-for="PhotoUpload" class="form-control" type="file" />
                        <span asp-validation-for="PhotoUpload" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="CauseId" class="control-label">Cause</label>
                        <select asp-for="CauseId" class ="form-select" asp-items="ViewBag.CauseId"></select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="States" class="control-label">State</label>
                        <select id="States" class ="form-select" asp-items="ViewBag.States">
                            <option selected>-- Select State --</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="CityId" class="control-label">City</label>
                        <select asp-for="CityId" class ="form-select"></select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" form="project-form" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-danger me-2" data-bs-dismiss="modal"> Cancel</button>
            </div>
        </div>
    </div>
</div>