@model Objective

<div class="card card-body h-100">
    <div class="mb-5 mb-xl-9">
        <div class="row gx-0 gx-sm-7">
            <div class="col-12 col-sm-auto">
                <table id="objective-info" data-objective="@Model.Id" class="lh-sm mb-4 mb-sm-0 mb-xl-4">
                    <tbody>
                        <tr>
                            <td class="py-1" colspan="2">
                                <div class="d-flex">
                                    <span class="fa-solid fa-tag me-2 text-700 fs--1"></span>
                                    <h5 class="text-900">@Model.Name</h5>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="align-top py-1">
                                <div class="d-flex">
                                    <span class="fa-solid fa-people-group me-2 text-700 fs--1"></span>
                                    <h5 class="text-900 mb-0 text-nowrap">Team :</h5>
                                </div>
                            </td>
                            <td id="team-assignment" class="ps-1 py-1">
                                @if(Model.Team == null)
                                {
                                    <a class="fw-semi-bold d-block lh-sm" href="#!" data-bs-toggle="modal" data-bs-target="#assignTeamModal">
                                        Assign Team
                                    </a>
                                }
                                else
                                {
                                    <a class="fw-semi-bold d-block lh-sm" href="#!" data-bs-toggle="modal" data-bs-target="#assignTeamModal">
                                        @Model.Team.Name <span class="fa-solid fa-repeat me-2 text-700 fs--1"></span>
                                    </a>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="align-top py-1">
                                <div class="d-flex">
                                    <span class="fa-regular fa-credit-card me-2 text-700 fs--1"></span>
                                    <h5 class="text-900 mb-0 text-nowrap">Budget : </h5>
                                </div>
                            </td>
                            <td class="fw-bold ps-1 py-1 text-1000">$8,742</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-12 col-sm-auto">
            <table class="lh-sm">
                <tbody>
                    <tr>
                        <td class="align-top py-1 text-900 text-nowrap fw-bold">Started : </td>
                        <td class="text-600 fw-semi-bold ps-3">17th Nov, 2020</td>
                    </tr>
                    <tr>
                        <td class="align-top py-1 text-900 text-nowrap fw-bold">Deadline :</td>
                        <td class="text-600 fw-semi-bold ps-3">21st May, 2028</td>
                    </tr>
                    <tr>
                        <td class="align-top py-1 text-900 text-nowrap fw-bold">Progress :</td>
                        <td class="text-warning fw-semi-bold ps-3">80%</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>