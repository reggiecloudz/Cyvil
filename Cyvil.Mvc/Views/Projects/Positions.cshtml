@model Project

@{
    ViewData["Title"] = "Project Positions";
    long projectId = ViewBag.ProjectId;
}

@section Stylesheets {
@* <link href="~/vendors/flatpickr/flatpickr.min.css" rel="stylesheet"> *@
}

<div class="content">
    <partial name="_Breadcrumbs" />
    @await Html.PartialAsync("Positions/_PositionTable", Model)
    
    <partial name="_Footer" />
</div>

<vc:save-position></vc:save-position>

@section ProjectNav {
    @await Html.PartialAsync("Projects/_ProjectNav", projectId)
}

@section VendorScripts {
@* <script src="~/vendors/echarts/echarts.min.js"></script> *@
}

@section CustomScripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/app.js"></script>
    <script src="~/js/positions.js"></script>
    <script>
        $(document).ready(() => {
            $.validator.unobtrusive.parse($("#position-form"));
            savePosition();
        });
    </script>
}