@model ProjectObjectivesViewModel

@{
ViewData["Title"] = "Projects";
}

@section Stylesheets {
<link href="~/vendors/flatpickr/flatpickr.min.css" rel="stylesheet">
}

<div class="content">
    <div class="row g-3 mb-4">
        <div class="col-12">
            @await Html.PartialAsync("Objectives/_ObjectivesTable", Model.Objectives)
        </div>
    </div>
    <partial name="_Footer" />
</div>

@await Component.InvokeAsync("SaveObjective", new { projectId = Model.Project!.Id, goalId = Model.Project.Goal!.Id })

@section ProjectNav {
    @await Html.PartialAsync("Projects/_ProjectNav", Model.Project!.Id)
}

@section VendorScripts {
@* <script src="~/vendors/echarts/echarts.min.js"></script> *@
}

@section CustomScripts {
    <script src="~/js/app.js"></script>
    <script>
        $(document).ready(function () {
            saveObjective();
        });
    </script>
}